{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "lint": "next lint",
    "start": "next start",
    "format": "prettier --write \"./**/*.{ts,tsx}\"",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write --ignore-path .gitignore .",
    "prettier:check": "prettier --check --ignore-path .gitignore .",
    "test": "yarn prettier:check && yarn lint",
    "type-check": "tsc --noEmit",
    "validate": "yarn type-check && yarn lint"
  },
  "git": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-path .gitignore ."
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@fluentui/react-components": "^9.7.4",
    "gray-matter": "^4.0.3",
    "moment": "^2.29.4",
    "next": "^13.1.0",
    "next-mdx-remote": "^4.2.0",
    "react": ">=18",
    "react-dom": ">=18",
    "server-only": "^0.0.1",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "eslint": "^8.29.0",
    "eslint-config-next": "^13.1.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1"
  }
}
